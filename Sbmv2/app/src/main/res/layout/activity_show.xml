<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/load__"
    tools:context=".ShowActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f7f7f4"
        android:textSize="27dp"
        android:text="Your Booking Is from"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:layout_marginTop="150dp"
        android:id="@+id/t1f"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f7f7f4"
        android:textSize="27dp"
        android:text=""
        android:layout_below="@+id/t1f"
        android:layout_marginLeft="100dp"
        android:textStyle="italic"
        android:layout_centerVertical="true"
        android:id="@+id/t2f"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f7f7f4"
        android:textSize="27dp"
        android:text="to"
        android:layout_below="@+id/t2f"
        android:layout_marginLeft="150dp"
        android:textStyle="italic"
        android:layout_centerVertical="true"
        android:id="@+id/t3f"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f7f7f4"
        android:textSize="27dp"
        android:text=""
        android:layout_below="@+id/t3f"
        android:layout_marginLeft="100dp"
        android:textStyle="italic"
        android:layout_centerVertical="true"
        android:id="@+id/t4f"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/t1f"
        android:layout_marginTop="150dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Get Schedule"
        android:background="@drawable/b_"
        android:onClick="fn"
        />

</RelativeLayout>
