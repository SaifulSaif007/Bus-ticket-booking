<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/load9"
    tools:context="com.example.user.sbmv2.DataActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nearest bus Stand"
        android:textStyle="italic"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:textColor="#000"
        android:id="@+id/txt1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#1b1a1a"
        android:id="@+id/bus"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The area you want to go"
        android:textStyle="italic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/bus"
        android:textSize="25dp"
        android:textColor="#000"
        android:id="@+id/txt2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/txt2"
        android:textColor="#0e0e0e"
        android:id="@+id/bus2"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="125dp"
        android:text="Save"
        android:gravity="center"
        android:background="@drawable/b8"
        android:textStyle="bold"
        android:id="@+id/buttonb1"
        android:onClick="save"
        />

</RelativeLayout>
