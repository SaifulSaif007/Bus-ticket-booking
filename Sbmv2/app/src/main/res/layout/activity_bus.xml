<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/road_2"
    tools:context="com.example.user.sbmv2.BusActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT A BUS"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:textColor="#a9e49c"
        android:textSize="32dp"
        />
    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/b1"
        android:layout_marginTop="180dp"
        android:text="Green line"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/button1"
        android:onClick="Clicker1"
        />
    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button1"
        android:text="Star line"
        android:textSize="20dp"
        android:background="@drawable/b1"
        android:textStyle="bold"
        android:id="@+id/button2"
        android:onClick="Clicker2"
        />
    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button2"
        android:text="S.a parbahan"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/b1"
        android:id="@+id/button3"
        android:onClick="Clicker3"
        />
    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button3"
        android:text="Hanif bus service"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/b1"
        android:id="@+id/button4"
        android:onClick="Clicker4"
        />
    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button4"
        android:text="City bus service"
        android:background="@drawable/b1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/button5"
        android:onClick="Clicker5"
        />
    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button5"
        android:text="A.K Travels"
        android:background="@drawable/b1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/button6"
        android:onClick="Clicker6"
        />
</RelativeLayout>


